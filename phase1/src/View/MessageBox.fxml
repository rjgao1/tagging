<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<VBox prefHeight="175.0" prefWidth="400.0"
      xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Controller.MessageBoxController">


    <Region prefHeight="40.0" prefWidth="400.0"/>
    <Label fx:id="messageLabel" prefHeight="50.0" prefWidth="400.0" text="$message">
        <font>
            <Font size="26.0"/>
        </font>
    </Label>
    <Region layoutX="10.0" layoutY="10.0" prefHeight="40.0" prefWidth="400.0"/>

    <HBox alignment="TOP_CENTER" spacing="10.0">
        <Button fx:id="okButton" onAction="#okButtonClicked" prefHeight="20.0" prefWidth="70.0" text="OK"/>
    </HBox>
</VBox>
